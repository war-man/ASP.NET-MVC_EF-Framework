@using Microsoft.AspNet.Identity
@if (Request.IsAuthenticated)
{
    <li>
        <a class="dropdown-trigger" data-target="usermenu">
            @User.Identity.Name <i class="fa fa-chevron-down" style="font-size: 16px;"></i>
        </a>
        <ul id="usermenu" class="dropdown-content" tabindex="0">
            <li tabindex="0"><a href="@Url.Action("UserProfile","CustomerManager")">Tài khoản của tôi</a></li>
            <li tabindex="0"><a href="@Url.Action("BookingOfCustomer","CustomerManager")">Quản lý lịch đặt</a></li>
            <li class="divider" tabindex="0"></li>
            @using (Html.BeginForm("../Account/LogOff", null, FormMethod.Post, htmlAttributes: new { @id = "logoutForm" }))
            {
                @Html.AntiForgeryToken()
                <li tabindex="0">
                    <a rel="nofollow" href="javascript:document.getElementById('logoutForm').submit()"><i class="fa fa-sign-out"></i>Đăng xuất</a>
                </li>
            }

        </ul>
    </li>
}
else
{
    <li><a href="@Url.Action("Register","Account")" style="color: rgb(251, 140, 0);">Đăng ký</a></li>
    <li><a href="@Url.Action("Login","Account")" style="color: rgb(251, 140, 0);">Đăng nhập</a></li>
}
