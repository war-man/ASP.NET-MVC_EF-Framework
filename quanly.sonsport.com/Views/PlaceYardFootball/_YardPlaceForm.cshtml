@using quanly.sonsport.com.Models
@model PlaceYardViewModel
@using (Ajax.BeginForm("AddOrEdit", "PlaceYardFootball",
            ajaxOptions: new AjaxOptions
            {
                HttpMethod = "POST",
                OnSuccess = "OnSuccess",
                OnFailure = "OnFailure"
