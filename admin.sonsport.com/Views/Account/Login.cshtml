@using Business.BusinessViewModels
@model LoginViewModel
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">

<head>

    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">

    <title>SB Admin - Login</title>

    <!-- Bootstrap core CSS-->
    <link href="~/Assets/TemplateAdmin/vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet">

    <!-- Custom fonts for this template-->
    <link href="~/Assets/TemplateAdmin/vendor/fontawesome-free/css/all.min.css" rel="stylesheet" type="text/css">

    <!-- Custom styles for this template-->
    <link href="~/Assets/TemplateAdmin/css/sb-admin.css" rel="stylesheet">

</head>

<body class="bg-dark">

    <div class="container">
        <div class="card card-login mx-auto mt-5">
            <div class="card-header">Đăng nhập</div>
            <div class="card-body">
                @using (Html.BeginForm("Login", "Account", FormMethod.Post, new { ReturnUrl = ViewBag.ReturnUrl }))
                {
                    @Html.AntiForgeryToken()
                    <div class="form-group">
                        <div class="form-label-group">
                            @Html.TextBoxFor(n => n.Email, htmlAttributes: new { @required = "required", @type = "email", @class = "form-control", @autofocus = "autofocus", @placeholder = $"{Html.DisplayFor(n => n.Email)}" })
                            @Html.LabelFor(n => n.Email)
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="form-label-group">
                            @Html.PasswordFor(n => n.Password, htmlAttributes: new { @required = "required", @class = "form-control", @placeholder = $"{Html.DisplayNameFor(n => n.Password)}" })
                            @Html.LabelFor(n => n.Password)
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="checkbox">
                            <label>
                                @Html.CheckBoxFor(n => n.RememberMe)
                                Nhớ mật khẩu
                            </label>
                        </div>
                    </div>
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                    <input type="submit" class="btn btn-primary btn-block" value="Đăng nhập" />
                }

                <div class="text-center">
                    @*<a class="d-block small mt-3" href="register.html">Register an Account</a>*@
                    <a class="d-block small" href="forgot-password.html">Quên mật khẩu?</a>
                </div>
            </div>
        </div>
    </div>

    <!-- Bootstrap core JavaScript-->
    <script src="~/Assets/TemplateAdmin/vendor/jquery/jquery.min.js"></script>
    <script src="~/Assets/TemplateAdmin/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="~/Assets/Scripts/jquery.validate.min.js"></script>
    <script src="~/Assets/Scripts/jquery.validate.unobtrusive.min.js"></script>
    <!-- Core plugin JavaScript-->
    <script src="~/Assets/TemplateAdmin/vendor/jquery-easing/jquery.easing.min.js"></script>

</body>

</html>
